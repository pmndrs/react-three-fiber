{
  "name": "react-three-fiber--root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "resolutions": {
    "camera-controls": "2.9.0"
  },
  "pnpm": {
    "overrides": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "changeset:add": "changeset add",
    "postinstall": "pnpm stub && pnpm patch-react-reconciler",
    "patch-react-reconciler": "vite build",
    "build": "pnpm --filter @react-three/fiber build && pnpm --filter @react-three/eslint-plugin build",
    "examples": "pnpm --filter example dev",
    "stub": "pnpm --filter @react-three/fiber stub && pnpm --filter @react-three/eslint-plugin stub",
    "dev": "pnpm stub",
    "ci": "pnpm build && pnpm verify-bundles && pnpm verify-types && pnpm typecheck && pnpm eslint && pnpm dev && pnpm test && pnpm format",
    "prepare": "husky",
    "eslint": "eslint packages/**/src/**/*.{ts,tsx}",
    "eslint:fix": "pnpm run eslint --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false --strict",
    "release": "pnpm build && pnpm changeset publish",
    "vers": "pnpm changeset version",
    "codegen:eslint": "cd packages/eslint-plugin && pnpm codegen",
    "analyze-fiber": "cd packages/fiber && npm publish --dry-run",
    "analyze-test": "cd packages/test-renderer && npm publish --dry-run",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "verify-bundles": "node scripts/verify-bundles.js",
    "verify-types": "node scripts/verify-types.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@changesets/changelog-git": "^0.2.1",
    "@changesets/cli": "^2.29.8",
    "@rollup/plugin-alias": "^6.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^22.0.0",
    "@types/offscreencanvas": "^2019.7.3",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@types/react-reconciler": "^0.32.3",
    "@types/scheduler": "^0.26.0",
    "@types/three": "^0.181.0",
    "@vitest/coverage-v8": "^4.0.17",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.53.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "pretty-quick": "^4.2.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-nil": "^2.0.0",
    "react-reconciler": "^0.33.0",
    "three": "^0.181.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@9.15.2"
}

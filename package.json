{
  "name": "react-three-fiber--root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "resolutions": {
    "camera-controls": "2.9.0"
  },
  "pnpm": {
    "overrides": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "scripts": {
    "changeset:add": "changeset add",
    "postinstall": "pnpm stub && pnpm patch-react-reconciler",
    "patch-react-reconciler": "vite build",
    "build": "pnpm --filter @react-three/fiber build && pnpm --filter @react-three/eslint-plugin build",
    "examples": "pnpm --filter example dev",
    "stub": "pnpm --filter @react-three/fiber stub && pnpm --filter @react-three/eslint-plugin stub",
    "dev": "pnpm stub",
    "ci": "pnpm build && pnpm typecheck && pnpm eslint && pnpm dev && pnpm test && pnpm format",
    "prepare": "husky install",
    "eslint": "eslint packages/**/src/**/*.{ts,tsx}",
    "eslint:fix": "pnpm run eslint --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false --strict",
    "release": "pnpm build && pnpm changeset publish",
    "vers": "pnpm changeset version",
    "codegen:eslint": "cd packages/eslint-plugin && pnpm codegen",
    "analyze-fiber": "cd packages/fiber && npm publish --dry-run",
    "analyze-test": "cd packages/test-renderer && npm publish --dry-run",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "verify-bundles": "node scripts/verify-bundles.js"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-react": "7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/changelog-git": "^0.1.11",
    "@changesets/cli": "^2.22.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.0.0",
    "@types/offscreencanvas": "^2019.7.3",
    "@types/prettier": "^2.7.3",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/react-reconciler": "^0.32.0",
    "@types/scheduler": "0.23.0",
    "@types/three": "^0.181.0",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vitest/coverage-v8": "^4.0.16",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-vitest": "^0.3.26",
    "husky": "^7.0.4",
    "jsdom": "^27.4.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-nil": "^2.0.0",
    "react-reconciler": "^0.33.0",
    "three": "^0.181.0",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vite": "^6.0.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@9.15.2"
}

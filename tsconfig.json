{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "baseUrl": "./src",
    "paths": {
      "react-three-fiber": ["./"]
    }
  },
  "include": ["./src", "__tests__/"],
  "exclude": ["./node_modules/**/*"]
}
